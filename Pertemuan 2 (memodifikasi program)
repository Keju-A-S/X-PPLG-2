#include <iostream>
using namespace std;

int main() {
    int i = 1, N, jumlah = 0;

    cout << "Masukkan banyak nilai: ";
    cin >> N;

    while (i < N) {
        cout << i * 7 << " + ";
        jumlah = jumlah + (i * 7);
        i++;
    }

    jumlah = jumlah + (i * 7);
    cout << i * 7 << " = " << jumlah << endl;

    double rerata = static_cast<double>(jumlah) / N;
    cout << "Rerata: " << jumlah << " / " << N << " = " << rerata;

    return 0;
}
